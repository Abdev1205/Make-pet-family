                <option >Cat -> Bengal</option>
                <option >Cat -> Persian</option>
                <option >Cat -> Siamese</option>
                <option >Cat -> Indian Billi</option>
                <option >Cat -> Bombay</option>
                <option >Cat -> Himalayan</option>
                <option >Cat -> Munchkin Cat</option>
                <option >Cat -> Maine Coon</option>
                <option >Cat -> Egyptian Mau</option>
                <option >Bird -> Cockatiels</option>
                <option >Bird -> Budgies</option>
                <option >Bird -> Zebra Finches</option>
                <option >Bird -> Dove</option>
                <option >Bird -> Hyacinth Macaw</option>
                <option >Bird -> Parrotlet</option>
                <option >Rabbit -> Lion-Head Rabbit</option>
                <option >Rabbit -> Balanc de Hotot</option>
                <option >Rabbit -> English Lop</option>
                <option >Rabbit -> Dutch Rabbit</option>
                <option >Rabbit -> Satin</option>
                <option >Rabbit ->Himalayan</option>
                <option >Cattle -> Nari</option>
                <option >Cattle -> Lakhimi</option>
                <option >Cattle -> Malvi</option>
                <option >Cattle -> Hariana</option>
                <option >Cattle -> Shweta Kapila</option>
                <option >Cattle -> Jersey</option>
                <option >Fish -> Danios</option>
                <option >Fish -> Guppy</option>
                <option >Fish -> Dwarf Gourami</option>
                <option >Fish -> Cherry Barb</option>
                <option >Fish -> Betta</option>
                <option >Fish -> <hr> Black Molly</option>
                
              </select>
            </div>

            







            <input type="submit" class="button" style="color: black;" value="Donate" />
            <p class="credit">Want to adopt a pet <a style="padding-left: 0.8rem; text-decoration:none"
                href="/adopt">Adopt</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>



