<body onload="render()">
  <div id="loading" style="position: fixed;
	width: 100%;
	height: 100vh;
	background: #fff
	url('css/images/loader.gif')
	 no-repeat center center;	
	z-index: 99999;">

  </div>

  {{>navbar}}


  <div id="Form-1" class="form_wrapper">
    <div class="form_container">
      <div class="title_container">
        <h2 style="color: red; font-size: 3rem; font-weight: bold;
    font-variant: small-caps;">Donate</h2>
        <p style="color: rgb(100, 74, 72); font-size: 1rem; font-weight: bold;
    font-variant: small-caps; padding-left:0rem; padding-right:0rem;">"Saving one animal wonâ€™t change the world, <br>
          but it will change the world for that one <strong style="font-size: 2rem; ">animal</strong> ."</p>
      </div>
      <div class="row clearfix">
        <div class="">
          <form action="/donators" method="POST">
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
              <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="row clearfix">
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                  <input type="text" name="first" placeholder="First Name" required />
                </div>
              </div>
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                  <input type="text" name="last" placeholder="Last Name" required />
                </div>
              </div>
            </div>
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-phone"></i></span>
              <input type="text" name="phone" placeholder="Phone" required />
            </div>
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-home"></i></span>
              <input type="text" name="address" placeholder="Address" required />
            </div>
            <div class="row clearfix">
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-city"></i></span>
                  <input type="text" name="city" placeholder="City" required />
                </div>
              </div>
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-city"></i></span>
                  <input type="text" name="state" placeholder="State" required />
                </div>
              </div>
            </div>
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-earth-americas"></i></span>
              <input type="text" name="country" placeholder="Country" required />
            </div>




            
            
            

            <div id="option-value">
            <div style="" id="option-dog" class="form-group input_field">
              <label style="font-size: 1rem;" for="exampleFormControlSelect1">Select pet and its Breed</label>
              <span style="padding-top: 1rem; margin-top:1rem;" ><i  aria-hidden="true" class="fa fa-dog"></i></span>
              <select  style="padding-left: 2.3rem;" class="form-control" id="exampleFormControlSelect1 " name="pet">

                <option >Dog ->  Labrador Retriever</option>
                <option >Dog ->  German Shepherd</option>
                <option >Dog ->  Golden Retriever</option>
                <option >Dog ->  Dachshund</option>
                <option >Dog -> Beagle</option>
                <option >Dog -> Boxer</option>
                <option >Dog -> Tibetan Mastiff</option>
                <option >Dog -> Pug</option>
                <option >Dog -> Rottweiler</option>
                <option >Dog -> Doberman</option>
